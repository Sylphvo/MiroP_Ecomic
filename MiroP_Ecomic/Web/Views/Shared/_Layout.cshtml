<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="~/Views/Shared/_MetaWeb.cshtml" />
    <title>@ViewData["Title"] - MiroP_Web</title>
    <partial name="~/Views/Shared/_ScriptAndCss_Header.cshtml" />
</head>
<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-navbar-full layout-horizontal layout-without-menu">
        <div class="layout-container">
            <!-- Navbar -->
            <partial name="~/Views/Shared/_Navbar.cshtml" />
            <div class="layout-page">
                <div class="content-wrapper">
                    <!-- Aside -->
                    <partial name="~/Views/Shared/_Aside.cshtml" />
                    <!-- Content -->
                      @RenderBody()
                    <!-- Footer -->
                    <partial name="~/Views/Shared/_Footer.cshtml" />
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>

        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>

    </div>
    @* Các thư viện add dưới footer  *@
    <partial name="~/Views/Shared/_ScriptFooter.cshtml" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
